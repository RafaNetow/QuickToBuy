@using Domain.Entities
@using MiPrimerMVC.Controllers
@using MiPrimerMVC.Models
@model MiPrimerMVC.Models.UserModel
@{
    ViewBag.Title = "Welcome to quick buy";


}


<div class="container">
    <div class="row clearfix">
        <div class="col-md-6 column">

            <link href="~/Content/Letra3D.css" rel="stylesheet" />
            <h1 class="text-center text-info">


                Welcome to Quick buy
            </h1>
        </div>
        <div class="col-md-6 column">
            <img alt="140x140" src="https://dl-web.dropbox.com/get/AplicacionParaWebToQuick/supermercado-ahorro.jpg?_subject_uid=272817219&w=AADXJ64Z2-huH8120-1XdIfbjqHF1YyQAY4IuqJWobh0GQ" border="0" height="200" width="200" class="img-circle" />
        </div>
    </div>
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row">
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img alt="300x200" src="https://dl.dropbox.com/s/t4ya6nrp7w0y2i3/icono-informacion.png?dl=0" />
                        <div class="caption">
                            <h3>
                                Que es Quick to buy?
                            </h3>
                            <p>
                                No te funcionan las ventas de garash? quieres vender algun objeto de casa pero no te atrevez a venderlo? Quick to buy te facilita todo solo tomale foto ponle precio y Listo
                            </p>
                            <p>
                                <a class="btn btn-primary" @Html.ActionLink("Termes", "Termes", "Register")>Mas informacion</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="thumbnail">
                        <img alt="300x200" src="https://dl.dropbox.com/s/9yr41t7lhdzhqfs/sign-up-icon.png?dl=0" />
                        <div class="caption">
                            <h3>
                                Facil De Registrar
                            </h3>
                            <p>
                                Registrate  para comenzar una  experiencia inolvidable
                            </p>
                            <p>
                                <a class="btn btn-primary" @Html.ActionLink("SignUp", "SignUp", "Home")></a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="thumbnail">

                        <img alt="300x200" src="https://dl.dropbox.com/s/g0bfjw6wc1mxsob/Log%20in.png?dl=0" />
                        <div class="caption">
                            <h3>
                                Login
                            </h3>
                            <p>
                                Ve las ofertas del momento
                            </p>
                            <p>
                                <a class="btn btn-primary" @Html.ActionLink("Login", "Login", "Account")></a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-6 column">
            <img alt="140x140" src="https://dl.dropbox.com/s/sfmwq8j5445gp1f/facebook.png?dl=0" class="img-rounded" /> <button type="Login" class="btn btn-success active btn-default">Login With Facebook</button>
        </div>

        <div class="col-md-6 column">

            <img alt="140x140" src="https://dl.dropbox.com/s/lo406781rvqeb3o/Twitter%20Logo.png?dl=0" /> <button type="button" class="btn btn-primary">Login With twitter</button>
        </div>
    </div>
</div>
